{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Game",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/game/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/game",
            "python": "${workspaceFolder}/src/game/.venv/Scripts/python.exe",
            "justMyCode": true
        },
        {
            "name": "Debug API (Reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/src/api/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Debug API (Prod)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/src/api/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}